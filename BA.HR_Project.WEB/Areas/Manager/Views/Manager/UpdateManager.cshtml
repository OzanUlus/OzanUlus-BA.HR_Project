
@model BA.HR_Project.WEB.Areas.Manager.Models.UpdateManagerViewModelcs

<div class="container">


    <form asp-controller="Manager" asp-action="UpdateManager" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control custom-select" type="text" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="SecondName">SecondName</label>
            <input asp-for="SecondName" class="form-control custom-select" type="text" placeholder="Second Name" />
        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Surname">Surname</label>
            <input asp-for="Surname" class="form-control custom-select" type="text" placeholder="Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="col-form-label text-warning" asp-for="SecondSurname">Second Surname</label>
            <input asp-for="SecondSurname" class="form-control custom-select" type="text" placeholder="Second Surname" />

        </div>

        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control custom-select" type="text" placeholder="Phone Number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="col-form-label text-warning" asp-for="Email">Phone Number</label>
            <input asp-for="Email" class="form-control custom-select" type="text" placeholder="Phone Number" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="custom-select" asp-for="CompanyId">Company Name</label>
            <select asp-for="CompanyId" class="form-control custom-select">
                <option value="CompanytId">-- Select Company Name --</option>
                @if (ViewBag.CompanyNames != null)
                {


                    foreach (var name in ViewBag.CompanyNames)
                    {

                        <option value="@name">@name.Split("/")[0]</option>
                    }


                }
            </select>
        </div>

        <div class="form-group">
            <label class="custom-select" asp-for="DepartmentId">Departmant Name</label>
            <select asp-for="DepartmentId" class="form-control custom-select">
                <option value="DepartmentId">-- Select Department Name --</option>
                @if (ViewBag.DepartmentName != null)
                {


                    foreach (var name in ViewBag.DepartmentName)
                    {

                        <option value="@name">@name.Split("/")[0]</option>
                    }


                }
            </select>
        </div>
        <div>
            <input accept=".jpeg,.jpg,.png" type="file" asp-for="Photo" class="form-control-file text-light" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>


        <button type="submit" class="btn-warning">Update</button>
    </form>


</div>
