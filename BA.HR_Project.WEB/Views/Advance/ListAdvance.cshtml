@{
    ViewData["Title"] = "DemandAdvance";
    Layout = "_LayoutEmployeeSide";
}

@model List<AdvanceViewModel>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div>
                <a asp-action="DemandAdvance" asp-controller="Advance" class="btn btn-primary">Demand Advances</a>
                <!-- diğer tüm avansların popupını açacak buton -->
                <button id="showAvansListButton" class="btn btn-primary">All Advances</button>
            </div> <br />

            <table class="table text-light">
                <thead>
                    <tr>
                        <th>Advance Type</th>
                        <th>Amount</th>
                        <th>Currency</th>
                        <th>Request Date</th>
                        <th>Response Date</th>
                        <th>Description</th>
                        <th>Confirm Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advance in Model)
                    {
                        <tr>
                            <td>@advance.AdvanceType.ToString()</td>
                            <td>@advance.Amount</td>
                            <td>@advance.Currency.ToString()</td>
                            <td>@advance.RequestDate</td>
                            <td>@advance.ResponseDate</td>
                            <td>@advance.Description</td>
                            <td>@advance.ConfirmStatus.ToString()</td>

                        </tr>

                    }
                </tbody>
            </table>


            <!-- Popup içeriği -->

            <div id="avansListPopup" class="modalC">
                <div class="modal-contentC">
                    <span class="closeC" onclick="closePopup()">&times;</span>

                    <h2 class="text-warning text-center"><u>Waiting Advances</u></h2>

                    <table class="table text-light">
                        <thead>
                            <tr>
                                <th>Advance Type</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Request Date</th>
                                <th>Response Date</th>
                                <th>Description</th>
                                <th>Confirm Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var advance in ViewBag.WaitingAdvances)
                            {
                                <tr>
                                    <td>@advance.AdvanceType.ToString()</td>
                                    <td>@advance.Amount</td>
                                    <td>@advance.Currency.ToString()</td>
                                    <td>@advance.RequestDate</td>
                                    <td>@advance.ResponseDate</td>
                                    <td>@advance.Description</td>
                                    <td>@advance.ConfirmStatus.ToString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <h2 class="text-success text-center "><u>Approved Advances</u></h2>

                    <table class="table text-light">
                        <thead>
                            <tr>
                                <th>Advance Type</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Request Date</th>
                                <th>Response Date</th>
                                <th>Description</th>
                                <th>Confirm Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var advance in ViewBag.ApprovedAdvances)
                            {
                                <tr>
                                    <td>@advance.AdvanceType.ToString()</td>
                                    <td>@advance.Amount</td>
                                    <td>@advance.Currency.ToString()</td>
                                    <td>@advance.RequestDate</td>
                                    <td>@advance.ResponseDate</td>
                                    <td>@advance.Description</td>
                                    <td>@advance.ConfirmStatus.ToString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <h2 class=" text-center text-danger"><u>Denied Advances</u></h2>
                    <table class="table text-light">
                        <thead>
                            <tr>
                                <th>Advance Type</th>
                                <th>Amount</th>
                                <th>Currency</th>
                                <th>Request Date</th>
                                <th>Response Date</th>
                                <th>Description</th>
                                <th>Confirm Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var advance in ViewBag.DeniedAdvances)
                            {
                                <tr>
                                    <td>@advance.AdvanceType.ToString()</td>
                                    <td>@advance.Amount</td>
                                    <td>@advance.Currency.ToString()</td>
                                    <td>@advance.RequestDate</td>
                                    <td>@advance.ResponseDate</td>
                                    <td>@advance.Description</td>
                                    <td>@advance.ConfirmStatus.ToString()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    // Butona tıklandığında popupu açma
    document.getElementById('showAvansListButton').onclick = function () {
        openPopup();
    };

    // Popupu açma
    function openPopup() {
        document.getElementById('avansListPopup').style.display = 'block';
    }

    // Popupu kapama
    function closePopup() {
        document.getElementById('avansListPopup').style.display = 'none';
    }
</script>
