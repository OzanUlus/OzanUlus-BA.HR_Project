@model Response

@{
    ViewData["Title"] = "Warning";
}

<h1 class="text-danger">Warning</h1>
<p>@Model.Message</p>

@if (Model.Errors != null && Model.Errors.Any())
{
    <ul>
        @foreach (var error in Model.Errors)
        {
            <li>@error.Description</li>
        }
    </ul>
}

<form asp-controller="Home" asp-action="Warning" method="post">
    <!-- Eğer POST işlemleri için form elemanları ekleyecekseniz burada ekleyebilirsiniz -->
    <!-- Örneğin: <input asp-for="SomeProperty" /> -->
    <button type="submit">Submit</button>
</form>