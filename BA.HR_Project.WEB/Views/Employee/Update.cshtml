@using System.IO;
@{
    Layout = "_EmployeeLayout";
    //ViewData["Title"] = "Update";
     // System.IO ekledik
}


@model AppUserUpdateForEmployeeVM
@*<h1>Update</h1>*@


<div class="container">
  

<form asp-controller="Employee" asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="col-form-label text-warning" asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" type="number" placeholder="Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label text-warning" asp-for="Adress">Address</label>
        <input asp-for="Adress" class="form-control" type="text" placeholder="Address" />
        <span asp-validation-for="Adress" class="text-danger"></span>
        <br>
        <br>
    </div>

        <div class="form-group">
            <label asp-for="Photo">Select Photo:</label>

            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <div class="mb-3">
                    <img src="@Model.PhotoPath" alt="Current Photo" class="img-thumbnail" style="max-width: 150px; max-height: 150px;" />

                    <label class="form-check-label" style="color: white;">
                        <input type="checkbox" asp-for="UseExistingPhoto" /> Choose This Photo
                        <span asp-validation-for="UseExistingPhoto" class="text-danger"></span>
                    </label>

                </div>
            }

            <input accept=".jpeg,.jpg,.png" type="file" asp-for="Photo" class="form-control-file text-light" />
            <span asp-validation-for="Photo" class="text-danger"></span>


        </div>

    <button type="submit" class="btn-warning">Update</button>
</form>
   

 </div>