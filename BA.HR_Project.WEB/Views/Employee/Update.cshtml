
@{
    ViewData["Title"] = "Update";
}


@model UpdateUserProfileViewModel

<h1>Update</h1>


<form asp-action="Update" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Adress.City"></label>
        <input asp-for="Adress.City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adress.Street"></label>
        <input asp-for="Adress.Street" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adress.District"></label>
        <input asp-for="Adress.District" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Adress.ZipCode"></label>
        <input asp-for="Adress.ZipCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhotoPath"></label>
        <input type="file" name="PhotoFile" class="form-control-file" />
        <img src="@Model.PhotoPath" alt="Current Photo" class="mt-2" style="max-width: 150px;" />
    </div>
    <input type="submit" value="Update">
    </form>
