
@{
    Layout = "_EmployeeLayout";
    ViewData["Title"] = "Update";

}


@model UpdateUserProfileViewModel

<h1>Update</h1>


<form asp-action="Update" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="Id" />
    <img style="float:left; max-width: 10%; height: auto;" src="@Model.PhotoPath" alt="Current Photo" class="mt-2" style="max-width: 150px;" />



    <div class="form-group">
        <label class="text-warning" asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label class="text-warning" asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhotoPath"></label>
        <input type="file" asp-for="Photo" class="form-control-file" />
        
    </div>
    <input type="submit" value="Update">
</form>
