                    </div>

                    <div>
                        <label class="form-check-label" style="color: white;">
                            <input type="checkbox" asp-for="UseExistingPhoto" /> Choose This Photo
                            <span asp-validation-for="UseExistingPhoto" class="text-danger"></span>
                        </label>
                    </div>
                    <br />

                    <div style="margin-left:100px">
                        <input accept=".jpeg,.jpg,.png" type="file" asp-for="Photo" class="form-control-file text-light" />
