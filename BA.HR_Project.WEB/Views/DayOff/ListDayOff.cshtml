@{
    ViewData["Title"] = "ListAdvance";
    Layout = "_LayoutEmployeeSide";
}

@model List<DayOffViewModel>

<h2>Day Off Requests</h2>

<div>
    <!-- İzin türlerini ayıran butonlar -->
    <button id="showWaitingDayOffsButton" class="btn btn-primary">Waiting Day Offs</button>
    <button id="showApprovedDayOffsButton" class="btn btn-primary">Approved Day Offs</button>
    <button id="showDeniedDayOffsButton" class="btn btn-primary">Denied Day Offs</button>
</div> <br />

<!-- Tüm izinleri listeleyecek tablo -->
<table class="table text-light">
    <thead>
        <tr>
            <th>Day Off Type</th>
            <th>Start Date</th>
            <th>Finish Date</th>
            <th>Request Date</th>
            <th>Day Count</th>
            <th>Confirm Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dayOff in Model)
        {
            <tr>
                <td>@dayOff.DayOffType.ToString()</td>
                <td>@dayOff.StartDate</td>
                <td>@dayOff.FinishDate</td>
                <td>@dayOff.RequestDate</td>
                <td>@dayOff.DayCount</td>
                <td>@dayOff.ConfirmStatus.ToString()</td>
            </tr>
        }
    </tbody>
</table>

<!-- Popup içeriği -->
<div id="dayOffListPopup" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closePopup()">&times;</span>

        <!-- Waiting Day Offs -->
        <h2>Waiting Day Offs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Day Off Type</th>
                    <th>Start Date</th>
                    <th>Finish Date</th>
                    <th>Request Date</th>
                    <th>Day Count</th>
                    <th>Confirm Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dayOff in ViewBag.WaitingDayOffs)
                {
                    <tr>
                        <td>@dayOff.DayOffType.ToString()</td>
                        <td>@dayOff.StartDate</td>
                        <td>@dayOff.FinishDate</td>
                        <td>@dayOff.RequestDate</td>
                        <td>@dayOff.DayCount</td>
                        <td>@dayOff.ConfirmStatus.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Approved Day Offs -->
        <h2>Approved Day Offs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Day Off Type</th>
                    <th>Start Date</th>
                    <th>Finish Date</th>
                    <th>Request Date</th>
                    <th>Day Count</th>
                    <th>Confirm Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dayOff in ViewBag.ApprovedDayOffs)
                {
                    <tr>
                        <td>@dayOff.DayOffType.ToString()</td>
                        <td>@dayOff.StartDate</td>
                        <td>@dayOff.FinishDate</td>
                        <td>@dayOff.RequestDate</td>
                        <td>@dayOff.DayCount</td>
                        <td>@dayOff.ConfirmStatus.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Denied Day Offs -->
        <h2>Denied Day Offs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Day Off Type</th>
                    <th>Start Date</th>
                    <th>Finish Date</th>
                    <th>Request Date</th>
                    <th>Day Count</th>
                    <th>Confirm Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dayOff in ViewBag.DeniedDayOffs)
                {
                    <tr>
                        <td>@dayOff.DayOffType.ToString()</td>
                        <td>@dayOff.StartDate</td>
                        <td>@dayOff.FinishDate</td>
                        <td>@dayOff.RequestDate</td>
                        <td>@dayOff.DayCount</td>
                        <td>@dayOff.ConfirmStatus.ToString()</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    // İzin türlerini ayıran butonlara tıklama olayları
    document.getElementById('showWaitingDayOffsButton').onclick = function () {
        showDayOffs('Waiting');
    };
    document.getElementById('showApprovedDayOffsButton').onclick = function () {
        showDayOffs('Approved');
    };
    document.getElementById('showDeniedDayOffsButton').onclick = function () {
        showDayOffs('Denied');
    };

    // Popupı açma
    function openPopup() {
        document.getElementById('dayOffListPopup').style.display = 'block';
    }

    // Popupı kapatma
    function closePopup() {
        document.getElementById('dayOffListPopup').style.display = 'none';
    }

