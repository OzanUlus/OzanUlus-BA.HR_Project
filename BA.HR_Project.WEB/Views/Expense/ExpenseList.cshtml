@{
    Layout = "_LayoutEmployeeSide";
}
 @model List<ExpenseViewModel>


<div>
    <a asp-action="RequestExpense" asp-controller="Expense" class="btn btn-primary">Request Expense</a>
    <!-- diğer tüm avansların popupını açacak buton -->
    <button id="showExpenseListButton" class="btn btn-primary">All Expense</button>
</div>
<br />

<table class="table text-light">
    <thead>
        <tr>
            <th>Expense Name</th>
            <th>Request Price</th>
            <th>Currency</th>
            <th>Request Date</th>
            <th>Response Date</th>
            <th>Confirm Status</th>
            <th>Document</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ExpenseType.ExpenseName</td>
                <td>@item.RequestPrice</td>
                <td>@item.Currency.ToString()</td>
                <td>@item.RequestDate</td>
                <td>@item.ReplyDate</td>
                <td>@item.ConfirmStatus.ToString()</td>
                <td>@item.FilePath</td>

            </tr>

        }
    </tbody>
</table>


<!-- Popup içeriği -->
<div id="ExpenseListPopup" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closePopup()">&times;</span>

        <h2>Waiting Expense</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Expense Type</th>
                    <th>Request Price</th>
                    <th>Currency</th>
                    <th>Request Date</th>
                    <th>Response Date</th>
                    <th>Confirm Status</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.WaitingExpenses)
                {
                    <tr>
                        <td>@item.ExpenseType</td>
                        <td>@item.RequestPrice</td>
                        <td>@item.Currency.ToString()</td>
                        <td>@item.RequestDate</td>
                        <td>@item.ReplyDate</td>
                        <td>@item.ConfirmStatus.ToString()</td>
                        <td>@item.File</td>
                    </tr>
                 }
            </tbody>
        </table>

        <h2>Approved Expenses</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Expense Type</th>
                    <th>Request Price</th>
                    <th>Currency</th>
                    <th>Request Date</th>
                    <th>Response Date</th>
                    <th>Confirm Status</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.AprroveExpenses)
                {
                    <tr>
                        <td>@item.ExpenseType</td>
                        <td>@item.RequestPrice</td>
                        <td>@item.Currency.ToString()</td>
                        <td>@item.RequestDate</td>
                        <td>@item.ReplyDate</td>
                        <td>@item.ConfirmStatus.ToString()</td>
                        <td>@item.File</td>
                    </tr>
                }
            </tbody>
        </table>

        <h2>Denied Advances</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Advance Type</th>
                    <th>Amount</th>
                    <th>Currency</th>
                    <th>Request Date</th>
                    <th>Response Date</th>
                    <th>Description</th>
                    <th>Confirm Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.DinedExpenses)
                {
                    <tr>
                        <td>@item.ExpenseType</td>
                        <td>@item.RequestPrice</td>
                        <td>@item.Currency.ToString()</td>
                        <td>@item.RequestDate</td>
                        <td>@item.ReplyDate</td>
                        <td>@item.ConfirmStatus.ToString()</td>
                        <td>@item.File</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<script>
    // Butona tıklandığında popupu açma
    document.getElementById('showExpenseListButton').onclick = function () {
        openPopup();
    };

    // Popupu açma
    function openPopup() {
        document.getElementById('ExpenseListPopup').style.display = 'block';
    }

    // Popupu kapama
    function closePopup() {
        document.getElementById('ExpenseListPopup').style.display = 'none';
    }
</script>

